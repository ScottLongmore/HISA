{
  "MIRSTC":{
    "VER":"v2r0",
    "OUTSTRING":"TC"
  },
  "IOHandling":{
    "inputModule":"NDE",
    "inputMethod":"getInput",
    "PCFFILE":"MIRS_TC.PCF",
    "PSFFILE":"MIRS_TC.PSF",
    "LOGFILE":"MIRS_TC.LOG"
  },
  "workSubDirs":{
    "logDir":"log",
    "dataDir":"data",
    "modelDir":"model",
    "outputDir":"output"
  },
  "inputs":{
    "schema":{
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type":"object",
      "properties": {
        "SYS_DIR":{ "type":"string" },
        "PYTHON":{"type":"string"},
        "WGRIB":{"type":"string"},
        "adeck_input":{"type":"array","minItems":1,"items":{"type":"string"}},
        "gfs_input":{"type":"string"},
        "mirs_snd_input":{"type":"array","minItems":1,"items":{"type":"string"}},
	"mirs_img_input":{"type":"array","minItems":1,"items":{"type":"string"}}
      }
    },
    "datasets":{
      "adeck":{
        "inputKey":"adeck_input",
        "module":"ADECK",
        "dataMethod":"adeck",
        "filterMethod":"latestAdecks"
      },
      "gfs":{
        "inputKey":"gfs_input",
        "module":"GFS",
        "dataMethod":"gfs",
        "filterMethod":"latestGFS"
     },
      "mirs_atms_snd":{
       "inputKey":"mirs_snd_input",
        "module":"ATMS",
        "dataMethod":"atms"
      },
      "mirs_atms_img":{
        "inputKey":"mirs_img_input",
        "module":"ATMS",
        "dataMethod":"atms"
      }
    }
  },
  "programs":{
    "bin2pack":{
      "exe":"bin/bin2pack.x"
    },
    "pool":{
      "module":"pool",
      "configs":{
        "poolConfig":"etc/MIRS_TC_POOL.ini",
        "pluginDir":"scripts/python/pool/plugins"
      }
    },
    "shortTermTrack":{
      "exe":"bin/ShortTermTrack_mirs.x"
    },
    "afdeck":{
      "exe":"bin/afdeck.x"
    }
  },
  "OpsDirs":{
    "BINDIR":"bin",
    "ETCDIR":"etc",
    "SCPDIR":"scripts",
    "PYDIR":"scripts/python",
    "MIRS_DATAPOOL_SRC":"scripts/python/data_pool/",
    "PLOT_SRC":"scripts/python/plots/",
    "CONVERT_SRC":"scripts/python/convert/",
    "PYCOMDIR":"scripts/python/common/"
  },
  "exes":{ 
    "AFDECK":"bin/afdeck.x",
    "SATCENTER":"bin/satcenter.x",
    "OPARET":"bin/oparet.x"
  },
  "configs":{
    "OPARET_INPATTS":"etc/oparet.cfg"
  },
  "DataPool":{
    "MIRS_DATA_POOL":"scripts/python/data_pool.py",
    "MIRS_POOL_QUERY":"scripts/python/pool_query.py",
    "MIRS_QUERY_CONFIG":"scripts/python/query_config.txt",
    "MIRS_QUERY_VAR_LIST":"scripts/python/query_variable_list.txt",
    "MIRS_VAR_INFO":"scripts/python/variable_info.txt",
    "MIRS_SATID_LOOKUP":"scripts/python/sat_id_lookup_config.txt",
    "MIRS_SATID_REGEXP":"scripts/python/sat_id_regex_config.txt",
    "MIRS_CONFIG_FILES":["MIRS_QUERY_CONFIG","MIRS_QUERY_VAR_LIST","MIRS_VAR_INFO","MIRS_SATID_LOOKUP","MIRS_SATID_REGEXP"]
  },
  "Plot":{
    "PLOT_SCRIPT":"scripts/python/main_read_plot_xya.py"
  },
  "Convert":{
    "CONVERT_SCRIPT":"scripts/convert2netCDF.py",
    "CONVERT_XYA_CONFIG":"scripts/python/xya2netCDF.json",
    "CONVERT_RZA_CONFIG":"scripts/python/rza2netCDF.json"
  },
  "Extentions":{
    "PYEXT":"*.py",
    "CFEXT":"*.txt",
    "PNGEXT":"*.png"
  },
  "afdeck":{
    "COORDINATES":"COORDINATES"
  },
  "satcenter":{
    "MIRS_SATCENTER_FILES":[
       "years.txt","months.txt","days.txt","hours.txt","minutes.txt","seconds.txt","latitude.txt","longitude.txt",
       "scanline_index.txt","scanline_center_lat.txt","scanline_center_lon.txt","element_index.txt"
    ],
    "MIRS_OPARET_FILES":[
       "pressure_layers.txt","surface_pressure.txt","temperature_profile.txt","water_vapor_profile.txt",
       "skin_temperature.txt","surface_type.txt","tpw.txt","clw.txt","qc.txt","lwp.txt","rwp.txt"
    ],
    "TIMES":"TIMES",
    "COORTIMES":"COORTIMES"
  },
  "oparet":{
    "AVNFILE":"AVN.DAT"
  },
  "Satellites":{
    "SAT":"SNPP01",
    "SATS":["SNPP01"],
    "OUTSATS":["npp"],
    "INSTR":"ATMS"
  }
}
